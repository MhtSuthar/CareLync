<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        tools:context=".recent.RecentActivity">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linDashboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/viewProfile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dashboard_menu">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                />

                            <ImageView
                                android:layout_width="@dimen/dashboard_menu_icon"
                                android:layout_height="@dimen/dashboard_menu_icon"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_dashboard_profile" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:text="@string/my_profile"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="@color/colorPrimaryDark"
                                app:font="@{`medium`}" />

                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_text_dark"
                        />
                    <LinearLayout
                        android:id="@+id/viewTimeline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:layout_width="@dimen/dashboard_menu_icon"
                                android:layout_height="@dimen/dashboard_menu_icon"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_dashboard_timeline" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:text="@string/my_timeline"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="@color/colorPrimaryDark"
                                app:font="@{`medium`}" />

                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_text_dark"
                        />
                    <LinearLayout
                        android:id="@+id/viewMyGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:layout_width="@dimen/dashboard_menu_icon"
                                android:layout_height="@dimen/dashboard_menu_icon"

                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_dashboard_group" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:text="@string/my_group"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="@color/colorPrimaryDark"
                                app:font="@{`medium`}" />

                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_text_dark"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/viewMyForum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:layout_width="@dimen/dashboard_menu_icon"
                                android:layout_height="@dimen/dashboard_menu_icon"

                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_dashboard_forum" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:text="@string/my_forum"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="@color/colorPrimaryDark"
                                app:font="@{`medium`}" />

                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_text_dark"
                        />
                    <LinearLayout
                        android:id="@+id/viewMyEvent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:layout_width="@dimen/dashboard_menu_icon"
                                android:layout_height="@dimen/dashboard_menu_icon"

                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_dashboard_event" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:text="@string/my_event"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="@color/colorPrimaryDark"
                                app:font="@{`medium`}" />

                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_text_dark"
                        />
                    <LinearLayout
                        android:id="@+id/viewMySearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:layout_width="@dimen/dashboard_menu_icon"
                                android:layout_height="@dimen/dashboard_menu_icon"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/ic_dashboard_search" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="center"
                                android:text="@string/my_search"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="@color/colorPrimaryDark"
                                app:font="@{`medium`}" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_text_dark"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_margin"
                    android:orientation="horizontal">


                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
</layout>
