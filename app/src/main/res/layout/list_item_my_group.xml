<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtGroupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgGroup"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorAccent"
                tools:text="gdfgdfg" />

            <TextView
                android:id="@+id/txtCreatedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtGroupName"
                android:layout_toRightOf="@+id/imgGroup"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/color_text_dark"
                tools:text="gdfgdfg" />

            <ImageView
                android:id="@+id/imgGroup"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:visibility="visible"
                android:src="@drawable/dummy_bg_img" />

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgGroup"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/txtCreatedName"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                tools:text="gdfgdfg" />

                </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:drawableLeft="@drawable/ic_edit_grey"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/txt_delete"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/txt_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:drawablePadding="5dp"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/ic_delete"
                    android:gravity="center"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/black"
                    />
            </RelativeLayout>



        </LinearLayout>


</LinearLayout>