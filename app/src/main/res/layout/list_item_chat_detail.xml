<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/linLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            app:contentPadding="10dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">

        <com.carelynk.utilz.fonts.TimeNewRomanTextView
            android:id="@+id/txtLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxWidth="150dp"
            android:minWidth="50dp"
            android:text="Whats up buddy"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/black" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewLeft"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@android:color/white"
            android:visibility="gone"
            app:cardCornerRadius="5dp"
            app:contentPadding="2dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imgLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:transitionName="profile"
                android:layout_margin="2dp"
                android:src="@drawable/ic_placeholder" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txtLeftTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            app:contentPadding="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">

        <com.carelynk.utilz.fonts.TimeNewRomanTextView
            android:id="@+id/txtRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxWidth="150dp"
            android:text="how are  you?"
            android:minWidth="50dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/white" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewRight"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="gone"
            app:cardCornerRadius="5dp"
            app:contentPadding="2dp"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imgRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:transitionName="profile"
                android:src="@drawable/ic_placeholder" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txtRightTime"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:textSize="10dp" />

    </LinearLayout>



</RelativeLayout>